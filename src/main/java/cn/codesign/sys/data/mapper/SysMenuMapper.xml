<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.codesign.sys.data.mapper.SysMenuMapper">
    <resultMap id="BaseResultMap" type="cn.codesign.sys.data.model.SysMenu">
        <id column="ID" jdbcType="VARCHAR" property="id"/>
        <result column="MENU_NAME" jdbcType="VARCHAR" property="menuName"/>
        <result column="MENU_URL" jdbcType="VARCHAR" property="menuUrl"/>
        <result column="MENU_LEVEL" jdbcType="INTEGER" property="menuLevel"/>
        <result column="PARENT_ID" jdbcType="VARCHAR" property="parentId"/>
        <result column="MENU_INDEX" jdbcType="INTEGER" property="menuIndex"/>
    </resultMap>

    <select id="getMenu" resultMap="BaseResultMap">
        <![CDATA[
            SELECT * FROM SYS_MENU WHERE MENU_LEVEL = '1' ORDER BY MENU_INDEX
        ]]>
    </select>
</mapper>